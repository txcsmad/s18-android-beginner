<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.txcsmad.madspring2018.MainActivity">

    <TextView
        android:id="@+id/tv_player1_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:padding="8dp"
        android:text="Player 1:"
        android:textSize="16sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/tv_player1_score"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_player1_label"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/tv_player1_label"
        android:gravity="center"
        android:padding="8dp"
        android:text="000"/>


    <TextView
        android:id="@+id/tv_player2_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/tv_player2_score"
        android:gravity="center"
        android:padding="8dp"
        android:text="Player 2:"
        android:textSize="16sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/tv_player2_score"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_player2_label"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_player1_label"
        android:gravity="center"
        android:padding="8dp"
        android:text="000"/>


    <TextView
        android:id="@+id/tv_current_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/img_dice"
        android:gravity="center"
        android:text="~ Nobody Playing ~"/>

    <ImageView
        android:id="@+id/img_dice"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:padding="8dp"
        android:src="@drawable/dice1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_dice"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Round Score:"
            android:padding="4dp"/>

        <TextView android:id="@+id/tv_round_score"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="000"
            android:padding="4dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Hold"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Roll"
            android:onClick="rollDice"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="Reset"/>
    </LinearLayout>

</RelativeLayout>
